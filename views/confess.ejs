    <!-- Main Content -->
    <div class="container">
        <div class="confession-wrapper">
            <div class="envelope" id="envelope">
                <div class="envelope-flap"></div>
                <div class="envelope-body">
                    <div class="confession-card" id="confessionCard">
                        <div class="seal" id="seal">
                            <div class="wax"></div>
                        </div>
                        
                        <div class="confession-content" id="confessionContent">
                            <!-- Offline message placeholder -->
                            <p class="offline__msg__manager"></p>
                            
                            <div class="confession-header">
                                <h3 class="confession-title" id="confession-title">
                                    <% if(prompt) { %>
                                        <%- prompt %>
                                    <% } else { %>
                                        A Message from the Heart üíå
                                    <% } %>
                                </h3>
                                <div class="title-underline"></div>
                            </div>

                            <!-- the REAL Confession PART -->
                            <% if (confession && confession.text) { %>
                                <div class="confession-text">
                                    <div class="paper-texture">
                                        <p class="result__paragraph" id="confession__result__copy">
                                            <%= confession.text %>
                                        </p>
                                    </div>
                                    <button id="copy__btn" class="copy__btn"><img src="/icons/copy.svg" style="transform: translateY(5px);" width="25px" height="auto" alt="copy svg"> Copy </button>
                                </div>

                                <!-- Cache the Confession in localStorage -->
                                <script>
                                    document.addEventListener('DOMContentLoaded', function() {
                                        <% if (confession && confession.text && confession.timestamp) { %>
                                            try {
                                                const confessionData = {
                                                    text: `<%= confession.text.replace(/'/g, "\\'").replace(/\n/g, '\\n') %>`,
                                                    timestamp: <%= confession.timestamp %>
                                                };

                                                const lastSaved = JSON.parse(localStorage.getItem('lastConfession'));
                                                if (!lastSaved || confessionData.timestamp > lastSaved.timestamp) {
                                                    localStorage.setItem('lastConfession', JSON.stringify(confessionData));
                                                }
                                            } catch (error) {
                                                console.error('Error saving to localStorage:', error);
                                            }
                                        <% } %>
                                        checkOfflineStatus();
                                    });

                                    function checkOfflineStatus() {
                                        if (!navigator.onLine) {
                                            loadCachedConfession();
                                        }
                                    }

                                    function loadCachedConfession() {
                                        try {
                                            const cached = JSON.parse(localStorage.getItem('lastConfession'));
                                            const resultHolder = document.getElementById('confessionContent');
                                            const offlineMsg = document.querySelector('.offline__msg__manager');

                                            if (cached && cached.text) {
                                                offlineMsg.innerHTML = `<p class="offline__notice">üì° Offline Mode: Showing last Confession</p>`;
                                                if (!<%= (confession && confession.text) ? 'true' : 'false' %>) {
                                                    resultHolder.innerHTML = `<div class="confession-text"><div class="paper-texture"><p class="result__paragraph">${cached.text}</p></div></div>`;
                                                }
                                            } else if (!<%= (confession && confession.text) ? 'true' : 'false' %>) {
                                                resultHolder.innerHTML = `<p class="error__message">You're offline and no stories are cached yet.</p>`;
                                            }
                                        } catch (error) {
                                            console.error('Error loading cached Confession:', error);
                                        }
                                    }

                                    window.addEventListener('online', checkOfflineStatus);
                                    window.addEventListener('offline', checkOfflineStatus);
                                </script>
                            <% } %>

                            <% if (error && (!confession || !confession.text)) { %>
                                <p class="error__message">
                                    üíî Error: <%= error %>
                                </p>
                                <script>
                                    document.addEventListener('DOMContentLoaded', function() {
                                        const cached = JSON.parse(localStorage.getItem('lastConfession'));
                                        if (cached && cached.text) {
                                            document.querySelector('.offline__msg__manager').innerHTML =
                                                `<p class="offline__notice"> Showing last cached Confession due to error</p>`;
                                            document.querySelector('.confession-text .paper-texture').innerHTML +=
                                                `<p class="result__paragraph">${cached.text}</p>`;
                                        }
                                    });
                                </script>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="action-buttons">
                <a href="/" class="btn btn-primary heartbeat">
                    <img src="/icons/starsWhite.svg" width="30px" height="auto" alt="‚ú®"> 
                    Write Another Love Letter
                </a>
                <button class="btn btn-romantic" id="printBtn">
