<script>
document.addEventListener('DOMContentLoaded', function() {
    // Use This Button functionality - FIXED VERSION
    const useButtons = document.querySelectorAll('.use-this-btn');
    
    useButtons.forEach(button => {
        button.addEventListener('click', function() {
            const exampleCard = this.closest('.example-card');
            const prompt = exampleCard.querySelector('.example-prompt').textContent.replace('Prompt:', '').trim();
            
            // Smooth animation
            this.innerHTML = '‚ú® Taking You Home... ‚ú®';
            this.style.background = 'linear-gradient(135deg, var(--accent-gold), #ff9e6d)';
            
            // Store the prompt and redirect
            localStorage.setItem('suggestedPrompt', prompt);
            window.location.href = '/';
        });
    });

    // Add hover effects to example cards
    const exampleCards = document.querySelectorAll('.example-card');
    exampleCards.forEach(card => {
        card.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-5px)';
        });
        
        card.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0)';
        });
    });
});
</script>

