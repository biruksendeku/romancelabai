<script defer>
// Update year automatically
document.getElementById('currentYear').textContent = new Date().getFullYear();
        
// Character counter for textarea
const textarea = document.getElementById('prompt');
const charCount = document.getElementById('charCount');
        
textarea.addEventListener('input', function() {
	const count = this.value.length;
	charCount.textContent = count;
            
	// Change color when approaching limit
	if (count > 240) {
		charCount.style.color = '#ff4d6d';
	} else if (count > 200) {
		charCount.style.color = '#ff8e9e';
	} else {
		charCount.style.color = '#ccffcc';
	}
});

// Random confession count animation
function animateCounter() {
	const counter = document.getElementById('confessionCount');
	let count = 1247;
	const finalCount = 1247 + Math.floor(Math.random() * 50);
	const increment = Math.ceil((finalCount - count) / 50);
            
	const timer = setInterval(() => {
		count += increment;
		if (count >= finalCount) {
			count = finalCount;
			clearInterval(timer);
		}
		counter.textContent = count.toLocaleString() + '+';
	}, 30);
}

// Start animation when page loads
window.addEventListener('load', animateCounter);

</script>

<script>
    // Auto-fill prompt when coming from examples page
    document.addEventListener('DOMContentLoaded', function() {
        const suggestedPrompt = localStorage.getItem('suggestedPrompt');
        const textarea = document.querySelector('textarea[name="prompt"]');
        
        if (suggestedPrompt && textarea) {
            textarea.value = suggestedPrompt;
            textarea.focus();
            
            // Smooth scroll to the form
            textarea.scrollIntoView({ behavior: 'smooth', block: 'center' });
            
            // Clear the stored prompt so it doesn't fill again
            localStorage.removeItem('suggestedPrompt');
            
            // Show a little success message
            const formDiv = document.querySelector('.form__div');
            const successMsg = document.createElement('div');
            successMsg.innerHTML = '‚ú® Example loaded! Feel free to edit it to make it personal!';
            successMsg.style.cssText = 'text-align: center; color: var(--primary-love); padding: 10px; margin-bottom: 15px; font-weight: bold;';
            formDiv.insertBefore(successMsg, formDiv.firstChild);
            
            // Remove message after 5 seconds
            setTimeout(() => {
                successMsg.remove();
            }, 5000);
        }
    });
</script>
